@*(10) Añadir modelo y usarlo para asignar los valores por defecto en los input*@
@model Friend

<h1>Create friend</h1>
@*El formulario hace un POST al controlador FriendsController, a su acción Create*@
<form method="post" action="@Url.Action("Create", "Friends")">
    <div class="form-group">
        @* <label>Name:</label> @ViewContext.ModelState.IsValid *@
        <label>Name:</label> @Html.ValidationMessage("name")
        @* <input type="text" name="name" class="form-control" /> *@
        <input type="text" name="name" class="form-control" value="@Model.Name" />
    </div>
    <div class="form-group">
        <label>Age:</label> @Html.ValidationMessage("age")
        <input type="text" name="age" class="form-control" value="@Model.Age" />
    </div>
    <div class="form-group">
        <label>Email:</label> @Html.ValidationMessage("email")
        <input type="text" name="email" class="form-control" value="@Model.Email" />
    </div>
    <hr />
    <input type="submit" value="SUBMIT" />
</form>