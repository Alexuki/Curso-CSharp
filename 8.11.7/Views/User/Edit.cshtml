@model Lab04.ViewModels.Users.UserViewModel
@{
    ViewBag.Title = "Edit user";
}
<h2>Edit user</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        <label asp-for="Name"></label>
        <span asp-validation-for="Name"></span>
        <input asp-for="Name" class="form-control" maxlength="50" />
    </div>

    <div class="form-group">
        <label asp-for="Nickname"></label>
        <span asp-validation-for="Nickname"></span>
        <input asp-for="Nickname" class="form-control" maxlength="20" />
    </div>

    <div class="form-group">
        <label asp-for="Type"></label>
        <span asp-validation-for="Type"></span>
        <select asp-for="Type" asp-items="@(new SelectList(Model.UserTypes, "Id", "Name"))" class="form-control">
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <span asp-validation-for="Email"></span>
        <input asp-for="Email" class="form-control" maxlength="100" />
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <span asp-validation-for="Password"></span>
        <input asp-for="Password" class="form-control" maxlength="29"/>
    </div>

    <div class="form-group">
        <label asp-for="RePassword"></label>
        <span asp-validation-for="RePassword"></span>
        <input asp-for="RePassword" class="form-control" maxlength="29"/>
    </div>

    <div class="form-group">
        <label asp-for="Birthdate"></label>
        <span asp-validation-for="Birthdate"></span>
        <input asp-for="Birthdate" class="form-control"/>
    </div>

    <div class="form-group">
        <input asp-for="Enabled" />
        <label asp-for="Enabled"></label>
    </div>
        
    <input type="submit" value="Submit" class="btn btn-primary" />
}
@section Scripts
{
    <script src="~/lib/jQuery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}